@model TimeTracker.Model.Schedule

<form asp-action="ScheduleInfo" method="post">
    <label>Datum:</label>
    <input asp-for="ScheduleDate" type="date" class="form-control" required />
    <span asp-validation-for="ScheduleDate" class="text-danger"></span>


    <label>Početak rada:</label>
    <input asp-for="StartTime" type="time" class="form-control" required />
    <span asp-validation-for="StartTime" class="text-danger"></span>


    <label>Kraj rada:</label>
    <input asp-for="EndTime" type="time" class="form-control" required />
    <span asp-validation-for="EndTime" class="text-danger"></span>


    <label>Broj prodanih karata:</label>
    <input asp-for="TicketsSold" type="number" class="form-control" required min="0" />
    <span asp-validation-for="TicketsSold" class="text-danger"></span>


    <button class="btn btn-primary mt-3">Nastavi na odabir radnika</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}